<!DOCTYPE html>
<html>

<head>
    <title>NodeBattleship</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.4/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/site.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <img src="/images/hit.png" id="hit">
    <img src="/images/miss.png" id="miss">
</head>

<body>
    <div class="container">
        <div class="row vertical-center-row">
            <div class="col-md-12">

                <!-- Disconnected from server -->
                <div id="disconnected">
                    <div class="row">
                        <div class="col-sm-4 col-sm-offset-4 text-center">
                            <div class="alert alert-danger">
                                <p>Không kết nối được.</p>
                            </div>
                        </div>
                    </div>
                    <div class='row'>
                        <div class='col-md-12 text-center'>
                             <a href="/profile" class="btn btn-danger btn-sm">Thoát game</a>
                        </div>
                     </div>
                </div>
                <div>
                <!-- Choose GamePad -->
                <div id="gamepad" class="container">
                    <div class="row">
                        <div class="col-md-6 text-center">
                            <img src="/images/gamepad.jpg" id="gamepad1" width="300" height="300">
                        </div>

                        <div class="col-md-6 text-center">
                            <img src="/images/gamepad.jpg" id="gamepad2" width="300" height="300">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 text-center">
                            <button class="btn btn-info text-center" name="Player 1" id="player1" type="button submit">Player
                                1</button>
                        </div>
                        <div class="col-md-6 text-center">
                            <button class="btn btn-info text-center" name="Player 2" id="player2" type="button submit">Player
                                2</button>
                        </div>
                    </div>
                    <div class='row'>
                       <div class='col-md-12 text-center'>
                            <a href="/profile" class="btn btn-danger btn-sm">Thoát game</a>
                       </div>
                    </div>
                </div>

                <!-- Waiting room -->
                <div id="waiting-room" style="display:none;">
                    <div class="row">
                        <div class="col-sm-4 col-sm-offset-4 text-center">
                            <div class="panel panel-primary">
                                <div class="panel-heading">Phòng chờ</div>
                                <div class="panel-body">
                                    <p>Kết nối được rồi.</p>
                                    <p>Chờ đối phương....</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class='row'>
                        <div class='col-md-12 text-center'>
                             <a href="/profile" class="btn btn-danger btn-sm">Thoát game</a>
                        </div>
                     </div>
                </div>

                <!-- Game -->
                <div id="game" style="display:none;">

                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel panel-primary">
                                <div class="panel-heading">Battleship Game #<span id="game-number"></span></div>
                                <div class="panel-body">
                                    <!-- Player grids -->
                                    <div class="row">
                                        <div class="col-md-6 player-grid text-center">
                                            <h3>Bạn</h3>
                                            <canvas id="canvas-grid1" width="361" height="361">Browser does not support
                                                canvas.</canvas>
                                        </div>
                                        <div class="col-md-6 player-grid text-center">
                                            <h3>Đối phương</h3>
                                            <canvas id="canvas-grid2" width="361" height="361">Browser does not support
                                                canvas.</canvas>
                                        </div>
                                        <div class='row'>
                                            <div class='col-md-12 text-center'>
                                                 <a href="/profile" class="btn btn-danger btn-sm">Thoát game</a>
                                            </div>
                                         </div>
                                    </div>


                                </div>

                                <ul class="list-group">
                                    <!-- Status -->
                                    <li class="list-group-item text-center" id="turn-status"></li>
                                </ul>

                            </div>
                            
                        </div>
                    </div>
                    
                </div>
                
            </div>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <script src="http://13.250.67.15:3000/socket.io/socket.io.js"></script>
    <script type="text/javascript" src="/js/game.js"></script>
    <script type="text/javascript" src="/js/client.js"></script>
</body>

</html>
